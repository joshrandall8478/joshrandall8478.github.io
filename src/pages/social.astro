    <main>
        <section id="main-section" class="background main-background-filter">
            <div class="non-blurred container">
                <div class="content">
                <h1 id="main_title">We've moved!</h1>
                <img style="max-width:600px;width:50vw;border-radius:25px;" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ficeshrimp.dev%2Ficeshrimp%2Ficeshrimp%2Fmedia%2Fbranch%2Fdev%2Fassets%2Flogo.png&f=1&nofb=1&ipt=dabd5539b3ddede5330c1950347b24848761989cd4b99f19cce0c7257a79b34f&ipo=images" alt="">
