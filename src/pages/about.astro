---
import '../styles/about.css';
import Layout from '../layouts/MainLayout.astro';
---

<Layout title="About">
    <!-- Main Content -->
    <main>

        <div class="container">
            <div class="content">
                <img src="/assets/profile_picture.PNG">
                <h1 id="main__title">About</h1>
                <h2 id="main__subtitle">Joshua Randall</h2>
                <h3>Computer Science Major<br> Graphic Designer<br> Tech Enthusiast</h3>
            </div>
            <div class="paragraph">
                <p>
                    I am an aspiring software engineer + designer. I have started to learn professional languages
                    since 2019-2020, but have had an interest for programming since early high school. I am proficient in
                    Windows, macOS, and Linux systems. I run Arch linux + Windows on my main desktop, and I run an Apple ecosystem
                    for school and software development. I attend Eastern Michigan University, currently studying Computer
                    Science.
                    <br>
                    <br>
                    Besides coding and technology: I love driving stick-shift, I love graphic design (have been using Adobe since 2014),
                    I have played violin for 6 years.
                </p>
            </div>
        </div>
        <br>
        <hr id="divider">
        <br>
        <div class="skills">
            <h1 id="skills__title">Skills</h1>
            <h2 class="category__titles"><a class="fa-solid fa-code"></a> Languages</h2>
            <hr class="skills__divider">
            <div id="coding" class="skills__category">
                <div id="Python" class="skills__item">
                    <i class="fa-brands fa-python"></i>
                    <h2>Python</h2>
                </div>
                <div id="Java" class="skills__item">
                    <i class="fa-brands fa-java"></i>
                    <h2>Java</h2>
                </div>
                <div class="skills__item" id="CSS">
                    <i class="fa-brands fa-css3-alt"></i>
                    <h2>CSS</h2>
                </div>
                <div class="skills__item" id="HTML">
                    <i class="fa-brands fa-html5"></i>
                    <h2>HTML</h2>
                </div>
                <div class="skills__item" id="JS">
                    <i class="fa-brands fa-square-js"></i>
                    <h2>JavaScript</h2>
                </div>
                <div class="skills__item" id="MD">
                    <i class="fa-brands fa-markdown"></i>
                    <h2>Markdown</h2>
                </div>
            </div>
            <h2 class="category__titles"><a class="fa-solid fa-wand-magic-sparkles"></a> Design</h2>
            <div class="adobe__attribution"><p>Attribution: Adobe icons created by <a href="https://www.flaticon.com/authors/freepik" title="graphic design icons">Freepik</a></p></div>
            <hr class="skills__divider">
            <div id="design" class="skills__category">
                <div id="Premiere Pro" class="skills__item">
                    <img src="/assets/premiere-pro.png">
                    <h2>Premiere Pro</h2>
                </div>
                <div class="skills__item" id="After Effects">
                    <img src="/assets/after-effects.png">
                    <h2>After Effects</h2>
                </div>
                <div class="skills__item" id="Photoshop">
                    <img src="/assets/photoshop.png">
                    <h2>Photoshop</h2>
                </div>
                <div class="skills__item" id="Illustrator">
                    <img src="/assets/illustrator.png">
                    <h2>Illustrator</h2>
                </div>
            </div>
            <h2 class="category__titles"><a class="fa-solid fa-compact-disc"></a> Operating Systems</h2>
            <hr class="skills__divider">
            <div id="OS" class="skills__category">
                <div id="Windows" class="skills__item">
                    <i class="fa-brands fa-microsoft"></i>
                    <h2>Windows</h2>
                </div>
                <div id="macOS" class="skills__item">
                    <i class="fa-brands fa-apple"></i>
                    <h2>macOS</h2>
                </div>
                <div id="Linux" class="skills__item">
                    <i class="fa-brands fa-linux"></i>
                    <h2>Linux</h2>
                    <p>i use arch btw</p>
                </div>
            </div>
        </div>
    </div>
    <!-- <script src="../scripts/app.js"></script> -->
    <script>
        // Remove the transition class
const divider = document.querySelector('#divider');
const skills__title = document.querySelector('#skills__title');
const hr = document.querySelectorAll('.skills__divider');
const category__titles = document.querySelectorAll('.category__titles');
const skills__item = document.querySelectorAll('.skills__item');
const attribution = document.querySelector('.adobe__attribution');

// Create the observer, same as before:
const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
    if (entry.isIntersecting) {
        divider.classList.add('active');
        skills__title.classList.add('active');
        hr.forEach((element) => {
            element.classList.add('active');
        })
        category__titles.forEach((element) => {
            element.classList.add('active');
        })
        skills__item.forEach((element) => {
            element.classList.add('active');
        })
        attribution.classList.add('active');
        return;
    }
    });
});

observer.observe(document.querySelector('.skills'));
    </script>
    </main>
</Layout>
