---
import "../styles/new-blog.css";

const { frontmatter } = Astro.props;
let metaTitle = "Joshua Randall - " + frontmatter.title;
import TopBar from '../components/topbar.astro';
---

<html>
  <!-- ... -->
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Open Graph Data -->
    <meta name="og:site_name" content="Joshua Randall">
    <meta property="og:title" content={metaTitle} >
    <meta property="og:type" content="website">
    <meta property="og:image" content={frontmatter.image.url}>
    <meta property="og:url" content="https://joshrandall.net">
    <meta property="og:description" content="Main website for Joshua Randall">
    <!-- <meta name="theme-color" content="#77DD77"> -->

    <!-- Stylesheet and Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;600&display=swap" rel="stylesheet">
	
    <!-- Mastodon Verification-->
    <a rel="me" href="https://hachyderm.io/@pursuit"></a>
    <a rel="me" href="https://mastodon.world/@pursuit"></a>

    <!-- FontAwesome Javascript Link -->
    <script src="https://kit.fontawesome.com/61a8afa681.js" crossorigin="anonymous"></script>
    <title>{metaTitle}</title>
</head>
  <body>
    <!-- Navbar -->
    <TopBar/>
  <main>
    <section>
        
      <div class="blog__container">
        <div id="back__container">
            <a href="/blog"><i class="fa fa-arrow-left"></i> <span>Back to Blogs</span></a>
        </div>
        <div class="blog__content">
            <div class="blog-info">
                <h1>{frontmatter.title}</h1>
            <h2>Published: {frontmatter.date}</h2>
            <h3>Author: {frontmatter.author}</h3>
            <div class="blog-image-container">
                <img class="blog-image" src={frontmatter.image.url} alt={frontmatter.image.alt}>
            </div>
            </div>
            <hr>
            <slot />
        </div>
      </div>
    </section>
  </main>
  <script src="../scripts/app.js"></script>
  </body>
  <!-- ... -->
</html>
